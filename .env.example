# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key
FLASK_ENV=development

# Database Configuration
# App automatically detects environment using DYNO env var (set by Heroku)
# For local development (used when DYNO is not set)
LOCAL_DATABASE_CONN=sqlite:///autocart.db
# For Heroku (used when DYNO is set)
HEROKU_DATABASE_CONN=postgres://your-heroku-db-url-here

# Kroger API Configuration
# Get these from: https://developer.kroger.com/
CLIENT_ID=your-kroger-client-id-here
CLIENT_SECRET=your-kroger-client-secret-here
OAUTH2_BASE_URL=https://api.kroger.com/v1

# Redirect URLs - automatically selected based on environment
# For local development (used when DYNO env var is not set)
LOCAL_REDIRECT_URL=http://localhost:5000/callback
# For Heroku production (used when DYNO env var is set)
HEROKU_REDIRECT_URL=https://your-heroku-app.herokuapp.com/callback

# OpenAI API Configuration
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (Gmail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password-here
MAIL_DEFAULT_SENDER=your-email@gmail.com
